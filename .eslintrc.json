{
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "overrides": [
    {
      "files": ["test/sandbox/*.js", "test/**/*.test.js"],
      "env": {
        "jest": true
      },
      "globals": {
        "__DEBUG__": true,
        "browser": true
      }
    }
  ]
}
